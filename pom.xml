<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.simpleframework</groupId>
  <artifactId>simple-common</artifactId>
  <version>${simple.version}</version>
  <url>http://simpleframework.net</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- 开发环境 -->
    <simple.version>4.0.1-SNAPSHOT</simple.version>  
    <!-- 部署环境 -->
    <!-- <simple.version>4.0.0</simple.version>  -->
  </properties>

  <developers>
    <developer>
      <id>ckan77</id>
      <name>chenkan</name>
      <email>cknet@126.com</email>
    </developer>
  </developers>

  <!--仓库配置 -->
  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.simpleframework.net/nexus/content/groups/public</url>
      <snapshots>
        <!-- 资源库加载快照版本 -->
        <enabled>true</enabled>
        <!-- 允许更新同步快照 -->
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <releases>
        <!-- 资源库加载稳定版本 -->
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>

  <dependencies>
    <!-- 邮件 -->
    <dependency>
      <groupId>javax.mail</groupId>
      <artifactId>mail</artifactId>
      <version>1.4.5</version>
      <optional>true</optional>
    </dependency>

    <dependency>
      <groupId>redis.clients</groupId>
      <artifactId>jedis</artifactId>
      <version>2.7.2</version>
      <optional>true</optional>
    </dependency>

    <dependency>
      <groupId>com.caucho</groupId>
      <artifactId>hessian</artifactId>
      <version>4.0.38</version>
      <optional>true</optional>
    </dependency>
    
    <dependency>
      <groupId>com.yahoo.platform.yui</groupId>
      <artifactId>yuicompressor</artifactId>
      <version>2.4.7</version>
      <optional>true</optional>
      <exclusions>
        <exclusion>
          <groupId>rhino</groupId>
          <artifactId>js</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- web容器包 -->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>jsp-api</artifactId>
      <version>2.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.8.4</version>
      <optional>true</optional>
    </dependency>
  </dependencies>

  <build>
    <!-- 打包资源文件到jar包 -->
    <resources>
      <resource>
        <directory>src\main\java</directory>
        <excludes>
          <exclude>**/*.java</exclude>
          <exclude>**/*.tld</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src\main\java\tld</directory>
        <targetPath>META-INF</targetPath>
      </resource>
    </resources>

    <plugins>
      <!--编译插件 安装指令 source:jar install -U 或执行install.bat -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <encoding>utf-8</encoding>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <distributionManagement>
    <!-- 发布稳定版本到nexus服务 指令clean source:jar deploy -U 或执行deploy.bat -->
    <repository>
      <id>releases</id>
      <url>http://maven.simpleframework.net/content/repositories/releases</url>
    </repository>

    <!-- 发布快照版本到nexus服务 指令clean source:jar deploy -U 或执行deploy.bat -->
    <snapshotRepository>
      <id>snapshots</id>
      <url>http://maven.simpleframework.net/content/repositories/snapshots</url>
    </snapshotRepository>
  </distributionManagement>
</project>
